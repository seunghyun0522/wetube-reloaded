extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.avatarUrl
            if loggedInUser.socialOnly
                img.avatar(src="http://localhost:4000/" + loggedInUser.avatarUrl, crossorigin)
            else
                img.avatar(src="http://localhost:4000/" + loggedInUser.avatarUrl, crossorigin)
        h3=user.name
    div.video-grid
        each video in user.videos
            +videoInfo(video)
        else
            span.empty__message No videos found.
        